{
  "name": "helios-social-dapp",
  "version": "1.0.0",
  "description": "Decentralized social platform on Helios Testnet",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network helios",
    "verify": "hardhat run scripts/verify.js --network helios",
    "test": "hardhat test",
    "frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run frontend\"",
    "quickstart": "node scripts/quickStart.js",
    "balance": "hardhat run scripts/checkBalance.js --network helios",
    "faucet": "node scripts/getFaucet.js",
    "setup": "npm install && cd frontend && npm install && cd .. && node scripts/quickStart.js",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "node": "hardhat node",
    "console": "hardhat console --network helios"
  },
  "keywords": [
    "web3",
    "social",
    "helios",
    "dapp"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@openzeppelin/contracts": "^5.0.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.6.2",
    "chai": "^4.5.0",
    "concurrently": "^8.2.2",
    "ethers": "^6.15.0",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "dotenv": "^16.3.1"
  }
}
